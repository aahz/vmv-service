{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "removeComments": true,
    "esModuleInterop": true,
    "downlevelIteration": true,

    "lib": ["es2019", "es6", "es7", "dom"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "includes": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "configs",
    "node_modules"
  ]
}
